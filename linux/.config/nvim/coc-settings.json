{
  // explorer
  "explorer.width": 30,
  "explorer.quitOnOpen": true,
  "explorer.file.showHiddenFiles": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.file.column.clip.copy": "",
  "explorer.file.column.clip.cut": "",
  "explorer.previewAction.onHover": "labeling",
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },

  // fonts of suggestions
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },
  // "clangd.compilationDatabasePath": "path_to_comilecommands.json-folder",
  "signature.target": "float",
  "clangd.semanticHighlighting": true,
  // For windows have to set fallback flags
  // "clangd.fallbackFlags": ["--target=x86_64-w64-windows-gnu"],
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "cpp",
    "java",
    "lua",
    "c",
    "json",
    "markdown",
    "python"
  ],
  "git.enableGutters": true,
  "cSpell.userWords": ["cmake", "debugpy", "rajpr"],
  // "python.linting.pep8Enabled": true,
  // "python.linting.flake8Enabled": true,
  "python.formatting.provider": "yapf",
  "yaml.hover": true,
  "yaml.schemas": {},
  "yaml.format.enable": true,
  "git.addGBlameToVirtualText": true
}
